<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager_date_bar_tableview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/statues_gray"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/table_cell_height"
                    android:gravity="center_horizontal"
                    android:text="1"
                    android:textColor="@color/deeper_gray" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/table_cell_height"
                    android:gravity="center_horizontal"
                    android:text="2"
                    android:textColor="@color/deeper_gray" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/table_cell_height"
                    android:gravity="center_horizontal"
                    android:text="3"
                    android:textColor="@color/deeper_gray" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/table_cell_height"
                    android:gravity="center_horizontal"
                    android:text="4"
                    android:textColor="@color/deeper_gray" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/table_cell_height"
                    android:gravity="center_horizontal"
                    android:text="5"
                    android:textColor="@color/deeper_gray" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/table_cell_height"
                    android:gravity="center_horizontal"
                    android:text="6"
                    android:textColor="@color/deeper_gray" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/table_cell_height"
                    android:gravity="center_horizontal"
                    android:text="7"
                    android:textColor="@color/deeper_gray" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/table_cell_height"
                    android:gravity="center_horizontal"
                    android:text="8"
                    android:textColor="@color/deeper_gray" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/table_cell_height"
                    android:gravity="center_horizontal"
                    android:text="9"
                    android:textColor="@color/deeper_gray" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/table_cell_height"
                    android:gravity="center_horizontal"
                    android:text="10"
                    android:textColor="@color/deeper_gray" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/table_cell_height"
                    android:gravity="center_horizontal"
                    android:text="11"
                    android:textColor="@color/deeper_gray" />

            </LinearLayout>


            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewpager_main_table_tableview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:clipChildren="false"
              android:overScrollMode="never" />


        </LinearLayout>


    </ScrollView>

</LinearLayout>