<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_icon_myitem"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:contentDescription="图标"
        android:src="@drawable/circle_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_text_myitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/iv_icon_myitem"
        android:text="这是一个item"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <ImageView
        android:layout_marginEnd="2dp"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_alignParentEnd="true"
        android:contentDescription="右箭头"
        android:src="@drawable/right_arr_layer_list" />

</RelativeLayout>